{
  "name": "rmit-ecommerce",
  "version": "1.0.0",
  "description": "RMIT Ecommerce",
  "main": "server/index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "postinstall": "npm-run-all --parallel install:*",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "test": "npm-run-all --continue-on-error -p test:*",
    "test:server": "npm --prefix ./server test",
    "test:client": "npm --prefix ./client test",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:report": "playwright show-report",
    "e2e:external": "cross-env E2E_EXTERNAL=1 playwright test",
    "e2e:headed:external": "cross-env E2E_EXTERNAL=1 playwright test --headed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomhuynhsg/rmit-ecommerce.git"
  },
  "keywords": [
    "node",
    "express",
    "mongoose",
    "react",
    "redux",
    "redux-thunk",
    "webpack"
  ],
  "author": "Tom Huynh (https://github.com/tomhuynhsg)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomhuynhsg/rmit-ecommerce/issues"
  },
  "homepage": "https://github.com/tomhuynhsg/rmit-ecommerce#readme",
  "devDependencies": {
    "cross-env": "^5.2.1",
    "npm-run-all": "^4.1.5",
    "@playwright/test": "^1.48.2"
  }
}
